        </div>*@

    <div id="divLoading">
        <div id="loading-div" class="ui-corner-all text-center fa-align-center" style="margin-top:10%; color:white">
            <div id="loadingbar"><i class="fa fa-spinner fa-spin fa-3x fa-fw"></i></div>
            <h3 style="color:white;font-weight:normal;">Generating Analysis....</h3>
        </div>
    </div>


    <div id="dynamicContentContainer"></div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">

        //var year = 2019;
        $("#divLoading").show();
        $.get('@Url.Action("Filter",new { ProvinceID = "Over All" , YearID = 0, })', function (content) {
            $("#dynamicContentContainer").html(content);
            $("#divLoading").hide();
        });
        // on Region ID
        $('#ProvinceID').change(function () {

            //debugger;
            var YearID = $("#YearID").val();

            //alert(TypeID);
            //EnrollFilter Code
            var ProvinceID = $(this).val();
            //alert(ProvinceID);
            $("#divLoading").show();
            $.get('@Url.Action("Filter")', { ProvinceID: ProvinceID, YearID: YearID}, function(content){
                $("#dynamicContentContainer").html(content);
                $("#divLoading").hide();
            });
        });


         $('#YearID').change(function () {
             var YearID = $(this).val();

             var ProvinceID = $("#ProvinceID").val();
            $("#divLoading").show();
             $.get('@Url.Action("Filter")', { ProvinceID: ProvinceID,  YearID: YearID}, function(content){
                $("#dynamicContentContainer").html(content);
                $("#divLoading").hide();
            });
        });


    </script>
}