                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">District</label>
                            <select id="DistrictID" class="form-control" asp-items="@(new SelectList(string.Empty,"DistrictName"))" tabindex="2"></select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">Type</label>
                            <select id="TypeID" class="form-control" asp-items="ViewBag.Type" tabindex="4"></select>
                        </div>
                    </div>
