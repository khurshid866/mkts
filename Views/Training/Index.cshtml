        </div>*@

    <div id="divLoading">
        <div id="loading-div" class="ui-corner-all text-center fa-align-center" style="margin-top:10%; color:white">
            <div id="loadingbar"><i class="fa fa-spinner fa-spin fa-3x fa-fw"></i></div>
            <h3 style="color:white;font-weight:normal;">Generating Analysis....</h3>
        </div>
    </div>

    <div id="dynamicContentContainer"></div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">

        //var year = 2019;
        $("#divLoading").show();
        $.get('@Url.Action("Filter",new { ProvinceID = "Over All" , YearID = 0, Type="Over All" })', function (content) {
            $("#dynamicContentContainer").html(content);
            $("#divLoading").hide();
        });
        // on Region ID
        $('#ProvinceID').change(function () {

            var url = '@Url.Content("~/Training")' + "/GetDistrict";
            var ddlsource = "#ProvinceID";
            $.getJSON(url, { ProvinceID: $(ddlsource).val() }, function (data) {
                var items = '';

                $("#DistrictID").empty();
                $.each(data, function (i, designation) {
                    //items += "<option value='" + designation.text + "'>" + designation.text + "</option>";
                    items += "<option>" + designation.text + "</option>";
                });
                $("#DistrictID").html(items);
            });
          
            var TypeID = $("#TypeID").val();
            //alert(TypeID);
            //Filter Code
            var ProvinceID = $(this).val();
            //alert(ProvinceID);
            $("#divLoading").show();
            $.get('@Url.Action("Filter")', { ProvinceID: ProvinceID,  TypeID: TypeID}, function(content){
                $("#dynamicContentContainer").html(content);
                $("#divLoading").hide();
            });
        });
          $('#DistrictID').change(function () {
              var DistrictID = $(this).val();
              var ProvinceID = $("#ProvinceID").val();
              var TypeID = $("#TypeID").val();

            $("#divLoading").show();
              $.get('@Url.Action("Filter")', { ProvinceID: ProvinceID, DistrictID: DistrictID,  TypeID: TypeID}, function(content){
                $("#dynamicContentContainer").html(content);
                $("#divLoading").hide();
            });
        });


        $('#TypeID').change(function () {
            var TypeID = $(this).val();
             var DistrictID = $("#DistrictID").val();
           
             var ProvinceID = $("#ProvinceID").val();
            $("#divLoading").show();
             $.get('@Url.Action("Filter")', { ProvinceID: ProvinceID, DistrictID: DistrictID,  TypeID: TypeID}, function(content){
                $("#dynamicContentContainer").html(content);
                $("#divLoading").hide();
            });
        });
    </script>
}