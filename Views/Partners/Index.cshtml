@model IEnumerable<MKTS.Models.Data.Partner>

@{
    ViewData["Title"] = "Index";
}

<h2>Partners List</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PartnerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PartnerName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PartnerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PartnerID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PartnerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
