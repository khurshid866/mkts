@section Styles {
    <!-- DataTables -->
    <link rel="stylesheet" href="~/libs/datatables/css/dataTables.bootstrap.min.css">
}
<script src="~/lib/ChartJs/Chart.min.js"></script>

<script>
    $(function () {

        /* ChartJS
         * -------
         * Here we will create a few charts using ChartJS
         */


        //-------------
        //- BAR CHART -
        //-------------

        new Chart(document.getElementById("bar-chart"), {
            type: 'bar',
            data: {

               // labels: ["AJK", "Balochi", "GB", "ICT", "KP", "Punjab", "Sindh"],
                labels: @Html.Raw(Json.Serialize(Model.Districts)),

                datasets: [

                    {
                        label: "Males",
                        backgroundColor: 'rgba(102,64,58, 1)',
                         //data: [3666, 3223, 3002, 5193, 2924, 4946, 3504]
                        data:@Html.Raw(Json.Serialize(Model.DistrictMales)) ,
                    }, {
                        label: "Females",
                        backgroundColor: 'rgba(215, 26, 50, 1)',
                        data: @Html.Raw(Json.Serialize(Model.DistrictFemales)),
                        //data: [3666, 3223, 3002, 5193, 2924, 4946, 3504]
                    },
                ]
            },
            options: {
                //scales: {
                //    yAxes: [{
                //        stacked: true,
                //        ticks: {
                //            beginAtZero: true
                //        }
                //    }],
                //    xAxes: [{
                //        stacked: true,
                //        ticks: {
                //            beginAtZero: true
                //        }
                //    }]

                //},
                tooltips: {
                    mode: 'index',
                    intersect: false,
                    callbacks: {
                        afterTitle: function () {
                            window.total = 0;
                        },
                        label: function (tooltipItem, data) {
                            var corporation = data.datasets[tooltipItem.datasetIndex].label;
                            var valor = data.datasets[tooltipItem.datasetIndex].data[tooltipItem.index];
                            window.total += valor;
                            return corporation + ": " + valor.toString().replace(/\B(?=(\d{3})+(?!\d))/g, " ");
                        },
                        footer: function () {
                            return "TOTAL: " + window.total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, " ");
                        }
                    }
                },
                //legend: { display: false },
                title: {
                    //display: true,
                    //text: 'Predicted world population (millions) in 2050'
                },
                // },
                onComplete: function () {

                    var ctx = this.chart.ctx;
                    ctx.font = this.scale.font;
                    ctx.fillStyle = this.scale.textColor
                    ctx.textAlign = "center";
                    ctx.textBaseline = "bottom";

                    this.datasets.forEach(function (dataset) {
                        dataset.points.forEach(function (points) {
                            ctx.fillText(points.value, points.x, points.y - 10);
                        });
                    })
                }

            }

        });

        //-------------
        //- Partner CHART -
        //-------------

        new Chart(document.getElementById("Partner-chart"), {
            type: 'bar',
            data: {

               // labels: ["AJK", "Balochi", "GB", "ICT", "KP", "Punjab", "Sindh"],
                labels: @Html.Raw(Json.Serialize(Model.Partners)),

                datasets: [

                    {
                        label: "Male",
                        backgroundColor: 'rgba(215, 26, 50)',
           //data: [3666, 3223, 3002, 5193, 2924, 4946, 3504]
                        data:@Html.Raw(Json.Serialize(Model.partnerMales)) ,
                    },
                    {
                        label: "Female",
                        backgroundColor: 'rgba(250,164,26)',
                data: @Html.Raw(Json.Serialize(Model.PartnerFemales)),
                        //data: [3666, 3223, 3002, 5193, 2924, 4946, 3504]
                    },
                ]
            },
            options: {

                tooltips: {
                    mode: 'index',
                    intersect: false,
                    callbacks: {
                        afterTitle: function () {
                            window.total = 0;
                        },
                        label: function (tooltipItem, data) {
                            var corporation = data.datasets[tooltipItem.datasetIndex].label;
                            var valor = data.datasets[tooltipItem.datasetIndex].data[tooltipItem.index];
                            window.total += valor;
                            return corporation + ": " + valor.toString().replace(/\B(?=(\d{3})+(?!\d))/g, " ");
                        },
                        footer: function () {
                            return "TOTAL: " + window.total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, " ");
                        }
                    }
                },
                //legend: { display: false },
                title: {
                    //display: true,
                    //text: 'Predicted world population (millions) in 2050'
                },
                // },
                onComplete: function () {

                    var ctx = this.chart.ctx;
                    ctx.font = this.scale.font;
                    ctx.fillStyle = this.scale.textColor
                    ctx.textAlign = "center";
                    ctx.textBaseline = "bottom";

                    this.datasets.forEach(function (dataset) {
                        dataset.points.forEach(function (points) {
                            ctx.fillText(points.value, points.x, points.y - 10);
                        });
                    })
                }

            }

        });
        //-------------
        //- Line Chart -
        //-------------
        new Chart(document.getElementById("grade-chart"), {
            type: 'bar',
            data: {
                //labels: ["Plastic Mat", " Water Cooler", "Black Board", "Teacher Chair", "Attendance Registar", "Water Tank", "	Desk", "Cupboard/Rack", "Electric Cooler"],
                labels: @Html.Raw(Json.Serialize(Model.ThemeName)) ,
                datasets: [{
                    //data: [41, 31, 39, 31, 34, 35, 32, 36, 30],
                    data:  @Html.Raw(Json.Serialize(Model.ThemeMales)),
                    label: "Male Trainees",
                    backgroundColor: "rgba(250,164,26, 1)",
                    fill: false
                }, {
                    //data: [49, 40, 44, 48, 41, 48, 46, 40, 43],
                    data:  @Html.Raw(Json.Serialize(Model.ThemeFemales)),

                    label: "Female Trainees ",
                        backgroundColor: "rgba(102,64,58, 1)",
                    fill: false
                },
                ]
            },
            options: {
                title: {
                    // display: true,
                    //  text: 'World population per region (in millions)'
                }
            }
        });

    })</script>
