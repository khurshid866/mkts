            new Chart(document.getElementById("polar-chart"), {
                type: 'horizontalBar',
            data: {

               // labels: ["AJK", "Balochi", "GB", "ICT", "KP", "Punjab", "Sindh"],
                labels: @Html.Raw(Json.Serialize(Model.TrainingType)),

